<div class="text-center">
<form action='@Url.Action("Login", "AccountController")' class="form-signin">
        <h1 class="h3 mb-3 font-weight-normal">Incia sesion</h1>
        <label for="inputEmail" class="sr-only">Usuario</label>
        <input type="text" name="Username" id="inputEmail" class="form-control" placeholder="Usuario" required autofocus value="">
        <label for="inputPassword" class="sr-only">Contraseña</label>
        <input type="password" id="inputPassword" name="Contrasena" placeholder="Contraseña" class="form-control" required value="">
        @if(ViewBag.MsjError != null){
            <div class="alert alert-danger" role="alert">
                @ViewBag.MsjError   
            </div>
            <span>Has olvidado tu Contraseña?<a href='@Url.Action("ForgotPassword", "AccountController")'>Recupera tu contraseña</a></span>
        }
        <button class="btn btn-lg btn-primary btn-block" type="submit">Ingresar</button>
</form>
<span>¿No tenes cuenta?<a href='@Url.Action("Register", "AccountController")'>Registrate</a></span>
</div>